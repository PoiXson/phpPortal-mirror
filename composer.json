{
	"name":        "pxn/phpportal",
	"description": "Website Utilities Library",
	"type":        "library",
	"homepage":    "https://poixson.com/",
	"license":     "GPL-3.0",
	"keywords": [
		"framework", "utilities"
	],
	"support": {
		"source": "https://git.poixson.com/summary/pxn!phpPortal.git",
		"issues": "https://git.poixson.com/tickets/pxn!phpPortal.git",
		"irc":    "irc://irc.esper.net/poixson"
	},
	"authors": [{
		"name": "lorenzop",
		"role": "Developer"
	}],
	"autoload": {
		"psr-4": {
			"pxn\\phpPortal\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"pxn\\phpPortal\\tests\\":    "tests/",
			"pxn\\phpPortal\\examples\\": "examples/"
		}
	},
	"archive": {
		"exclude": [
			"tests/",
			"examples/"
		]
	},
	"require": {
		"pxn/phputils": "dev-master",
		"twig/twig": "v2.*",
		"michelf/php-markdown": "1.*",
		"pxn/composerlocaldev": "1.*"
	},
	"require-dev": {
		"phpunit/phpunit": "8.*"
	}
}
