{
	"name":        "pxn/phpportal",
	"description": "Website Utilities Library",
	"type":        "library",
	"homepage":    "http://poixson.com/",
	"license":     "GPL-3.0",
	"keywords": [
		"framework", "utilities"
	],
	"support": {
		"source": "http://git.poixson.com/summary/pxn!phpPortal.git",
		"issues": "http://git.poixson.com/tickets/pxn!phpPortal.git",
		"irc":    "irc://irc.esper.net/poixson"
	},
	"authors": [{
		"name":  "lorenzop",
		"role":  "Developer"
	}],
	"autoload": {
		"psr-4": {
			"pxn\\phpPortal\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"pxn\\phpPortal\\tests\\":    "tests/",
			"pxn\\phpPortal\\examples\\": "examples/"
		}
	},
	"archive": {
		"exclude": [
			"tests/",
			"examples/"
		]
	},
	"require": {
		"pxn/phputils":    "0.1.*",
		"pxn/pxdb":        "0.1.*"
	},
	"require-dev": {
		"ext-pdo":         "*",
		"ext-pdo_mysql":   "*",
		"ext-mbstring":    "*",
		"51systems/doctrine-encrypt": "v6.0.*",
		"filp/whoops":     "2.*",
		"twig/twig":       "v2.*",
		"michelf/php-markdown": "1.*",
		"phpunit/phpunit": "8.*"
	}
}
