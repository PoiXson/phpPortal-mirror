{
	"name":        "pxn/phpportal",
	"description": "Website Utilities Library",
	"type":        "library",
	"homepage":    "https://poixson.com/",
	"license":     "GPL-3.0",
	"keywords": [
		"framework", "utilities"
	],
	"support": {
		"source": "https://git.poixson.com/summary/pxn!phpPortal.git",
		"issues": "https://git.poixson.com/tickets/pxn!phpPortal.git",
		"irc":    "irc://irc.esper.net/poixson"
	},
	"authors": [{
		"name": "lorenzop",
		"role": "Developer"
	}],
	"autoload": {
		"psr-4": {
			"pxn\\phpPortal\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"pxn\\phpPortal\\tests\\": "tests/"
		}
	},
	"archive": {
		"exclude": [
			"tests/",
			"examples/"
		]
	},
	"require": {
		"pxn/phputils": "0.3.*",
		"pxn/webresources": "0.1.*",
		"twig/twig": "v3.*",
		"twig/markdown-extra": "v3.*",
		"michelf/php-markdown": "1.*",
		"pxn/composerlocaldev": "1.*"
	},
	"require-dev": {
		"filp/whoops": "2.*",
		"kint-php/kint": "3.*",
		"phpunit/phpunit": "*"
	}
}
